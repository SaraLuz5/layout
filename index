    <h2>Tarefas Cadastradas</h2>

    <ul id="tarefas-cadastradas">
        <!--tarefas aqui com js wow-->
    </ul>

    <script>

        let listaTarefas = [];
        let tarefa = document.querySelector("#tarefa");

        let ul_elem = document.querySelector("ul");

        function processarFormulario() {

            let tarefa = tarefa_elem.value;

            if (tarefa === '') {

                alert("A tarefa não pode estar vazia!");
                return false;

            }

            listaTarefas.push(tarefa);

            const li = document.createElement("li");
            li.textContent = tarefa;

            ul_elem.appendChild(li);

            localStorage.setItem("chave", "um valor que quero")

            console.log(tarefa.value);
            return false;

        }

    </script>

